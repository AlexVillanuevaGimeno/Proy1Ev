<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ropa_bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_primary"
        android:alpha="0.6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="28dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VINTED"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="48sp"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="360dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ropa2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/venta" />

            </LinearLayout>
        </RelativeLayout>
            <Button
                android:id="@+id/btnUserSells"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Popular Users"
                app:cornerRadius="32dp"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="-15dp"
                android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/btnBetterRateProducts"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Better Rate Products"
            app:cornerRadius="32dp" />
        <Button
            android:id="@+id/btnProductsCategory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Listado de productos"
            app:cornerRadius="32dp" />


        <Button
            android:id="@+id/btnIndex"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            app:cornerRadius="32dp" />

